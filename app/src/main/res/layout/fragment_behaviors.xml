<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike.moodtracker.BehaviorsFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_gravity="left|top">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Behaviors"
            android:id="@+id/MyMoodsButton"
            android:onClick="onMyBehaviorClick"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Behaviors"
            android:id="@+id/SearchMoodsButton"
            android:onClick="onSearchBehviorClick"
            android:textAlignment="center"
            android:layout_below="@+id/MyMoodsButton"
            android:layout_alignRight="@+id/MyMoodsButton"
            android:layout_alignEnd="@+id/MyMoodsButton"
            android:layout_gravity="right|center_vertical"
            android:layout_row="6"
            android:layout_column="17" />
    </GridLayout>

</FrameLayout>
