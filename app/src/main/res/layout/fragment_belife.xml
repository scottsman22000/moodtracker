<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mike.moodtracker.BelifeFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="left|top">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Belifes"
            android:id="@+id/MyMoodsButton"
            android:layout_gravity="left|center_vertical"
            android:onClick="onMyBelifeClick"
            android:layout_row="2"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Belifes"
            android:id="@+id/SearchMoodsButton"
            android:layout_gravity="right"
            android:onClick="onSearchBelifesListClicked"
            android:layout_row="2"
            android:layout_column="28" />

    </GridLayout>

</FrameLayout>
