<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mike.moodtracker.LogMoods">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="belief"
        android:id="@+id/BelifeButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger"
        android:id="@+id/TriggerButton"
        android:layout_below="@+id/BelifeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood"
        android:id="@+id/MoodButton"
        android:layout_alignTop="@+id/TriggerButton"
        android:layout_alignLeft="@+id/BelifeButton"
        android:layout_alignStart="@+id/BelifeButton"
        android:onClick="onMoodClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Behavior"
        android:id="@+id/BehaviorButton"
        android:layout_alignTop="@+id/MoodButton"
        android:layout_toRightOf="@+id/MoodButton"
        android:layout_toEndOf="@+id/MoodButton"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/TriggerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/frameLayout"></FrameLayout>

</RelativeLayout>
