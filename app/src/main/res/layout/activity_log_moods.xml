<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mike.moodtracker.LogMoods">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BELIEF"
        android:id="@+id/BelifeButton"
        android:layout_centerHorizontal="true"
        android:textSize="11dp"
        android:onClick="onBelifeClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger"
        android:id="@+id/TriggerButton"
        android:textSize="11dp"
        android:onClick="onTriggerClick"
        android:layout_below="@+id/BelifeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood"
        android:id="@+id/MoodButton"
        android:onClick="onMoodClick"
        android:textSize="11dp"
        android:layout_below="@+id/TriggerButton"
        android:layout_alignLeft="@+id/BelifeButton"
        android:layout_alignStart="@+id/BelifeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Behavior"
        android:id="@+id/BehaviorButton"
        android:textSize="11dp"
        android:onClick="onBehviorClick"
        android:layout_below="@+id/BelifeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/MoodButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="334dp"
            android:layout_height="12dp"
            android:layout_gravity="left|top"
            android:id="@+id/dividerLayout"></LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />
    </FrameLayout>

</RelativeLayout>
